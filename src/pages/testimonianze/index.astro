      margin-bottom: 32px;
      font-size: 18px;
      line-height: 1.6;
      font-style: italic;
      text-align: center;
      opacity: 0.9;
    }

    .dateline {
      margin: 26px 0 6px;
      font-size: 22px;
      font-weight: 400;
    }

    .sottotitolo {
      margin: 0 0 18px;
      font-size: 22px;
      font-weight: 400;
      opacity: 0.95;
    }

    .content {
      font-size: 20px;
      line-height: 1.75;
    }

    .content p {
      margin: 0 0 18px;
    }

    .firma {
      margin-top: 24px;
      font-style: italic;
      text-align: right;
    }

    @media (max-width: 720px) {
      .paper {
        padding: 42px 26px;
      }
      h1 {
        font-size: 44px;
      }
      .dateline,
      .sottotitolo {
        font-size: 20px;
      }
      .content {
        font-size: 20px;
      }

      .hero-figure img {
        width: min(520px, 80%);
      }
    }
