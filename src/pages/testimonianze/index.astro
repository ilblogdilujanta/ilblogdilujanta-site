    h1 {
      text-align: center;
      font-size: 44px;
      font-weight: 400;
      margin: 0 0 26px;
    }

    /* ===== BLOCCO TESTIMONIANZA ===== */
    .testimonianza {
      margin: 0 0 46px;
      padding: 0 0 46px;
      border-bottom: 1px solid rgba(44, 36, 28, 0.18);
    }
    .testimonianza:last-child {
      border-bottom: none;
      padding-bottom: 0;
      margin-bottom: 0;
    }

    .hero-figure {
      margin: 0 auto 18px;
      text-align: center;
    }

    .hero-figure img {
      display: block;
      margin: 0 auto;
      width: min(420px, 30%);
      height: auto;
