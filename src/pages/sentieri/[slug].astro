---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { slugify } from "../../lib/slugify";

type Articolo = CollectionEntry<"articoli">;

export async function getStaticPaths() {
  const articoli = await getCollection("articoli");
  const set = new Set<string>();

  for (const a of articoli) {
    for (const s of a.data.sentieri ?? []) {
      set.add(slugify(s));
    }
  }

  return Array.from(set).map((slug) => ({ params: { slug } }));
}

const articoli = await getCollection("articoli");
const { slug } = Astro.params as { slug: string };

// Nome “umano” del sentiero (quello scritto nell’MD)
let sentieroNome = slug;
for (const a of articoli) {
  const found = (a.data.sentieri ?? []).find((s) => slugify(s) === slug);
  if (found) {
    sentieroNome = found;
    break;
  }
}

const articoliDelSentiero = articoli
  .filter((a) => (a.data.sentieri ?? []).some((s) => slugify(s) === slug))
  .slice()
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (d: Date) =>
  d.toLocaleDateString("it-IT", { year: "numeric", month: "long", day: "2-digit" });

const pageTitle = `${sentieroNome} — Sentieri di Lettura`;
---

<BaseLayout title={pageTitle}>
  <style is:global>
    :root{
      --ink:#2c241c;
      --green:#0d8460;
      --paper1:#efe1c5;
      --paper2:#e2caa6;
      --paper3:#d8bc93;
    }

    body{
      margin:0;
      min-height:100vh;
      background: var(--green);
      font-family:
        "Baskerville Old Face","Baskerville","Libre Baskerville",
        Georgia,"Times New Roman",serif;
      color:var(--ink);
    }

    main{ display:flex; justify-content:center; padding:32px 14px; }

    .paper{
      max-width:980px; width:100%; padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, var(--paper1), var(--paper2) 55%, var(--paper3));
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{ text-align:center; font-size:40px; font-weight:400; margin:0 0 14px; }
    .sub{ text-align:center; opacity:0.75; margin:0 0 28px; }

    /* ===== LISTA CON COVER ===== */
    .rows{ margin:0; padding:0; list-style:none; }

    .row{
      display:grid;
      grid-template-columns: 150px 1fr;
      gap: 16px;
      padding: 12px 0;
      border-top:1px solid rgba(44,36,28,0.18);
      align-items: start;
    }
    .row:first-child{ border-top:0; }

    .cover-link{
      display:block;
      text-decoration:none;
    }

    .thumb{
      width:100%;
      height:100px;
      object-fit:cover;
      border-radius:6px;
      box-shadow:0 8px 20px rgba(0,0,0,0.18);
      display:block;
      background: rgba(255,255,255,0.12);
    }

    .text{ min-width:0; }

    a.article{
      text-decoration:none;
      color:var(--ink);
      border-bottom:1px solid rgba(44,36,28,0.25);
      display:inline;
    }
    a.article:hover{ border-bottom-color: rgba(44,36,28,0.6); }

    .meta{ opacity:0.75; font-size:14px; margin-top:6px; }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:34px; }

      .row{
        grid-template-columns: 1fr;
      }
      .thumb{
        height: 170px;
      }
    }

    /* ===== BOTTONE “ANTICO” (TORNA AI SENTIERI) ===== */
    .back-wrap{
      margin-top: 48px;
      text-align: center;
    }

    .back-btn{
      display: inline-block;
      padding: 10px 22px;
      font-size: 17px;
      font-family: inherit;
      color: var(--ink);
      text-decoration: none;

      background: rgba(255,255,255,0.22);
      border: 1px solid rgba(44,36,28,0.35);
      border-radius: 999px;

      box-shadow:
        inset 0 1px 0 rgba(255,255,255,0.35),
        0 4px 12px rgba(0,0,0,0.18);

      transition: background .2s ease, box-shadow .2s ease, transform .15s ease;
    }

    .back-btn:hover{
      background: rgba(255,255,255,0.42);
      box-shadow:
        inset 0 1px 0 rgba(255,255,255,0.45),
        0 6px 18px rgba(0,0,0,0.25);
      transform: translateY(-1px);
    }
  </style>

  <main>
    <article class="paper">
      <h1>{sentieroNome}</h1>
      <p class="sub">{articoliDelSentiero.length} articoli</p>

      {articoliDelSentiero.length === 0 ? (
        <p style="text-align:center; opacity:0.75;">
          Nessun articolo ancora associato a questo Sentiero.
        </p>
      ) : (
        <ul class="rows" aria-label="Articoli del sentiero">
          {articoliDelSentiero.map((a) => (
            <li class="row">
              {a.data.cover ? (
                <a class="cover-link" href={`/articoli/${a.slug}`} aria-label={`Apri: ${a.data.title}`}>
                  <img class="thumb" src={a.data.cover} alt={a.data.title} loading="lazy" />
                </a>
              ) : (
                <div aria-hidden="true">
                  <div class="thumb"></div>
                </div>
              )}

              <div class="text">
                <a class="article" href={`/articoli/${a.slug}`}>{a.data.title}</a>
                <div class="meta">{formatDate(a.data.date)}</div>
              </div>
            </li>
          ))}
        </ul>
      )}

      <!-- ✅ Bottone centrale in fondo -->
      <div class="back-wrap">
        <a class="back-btn" href="/sentieri">← Torna ai Sentieri di Lettura</a>
      </div>
    </article>
  </main>
</BaseLayout>
