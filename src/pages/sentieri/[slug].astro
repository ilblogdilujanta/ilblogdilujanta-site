---
import { getCollection, type CollectionEntry } from "astro:content";

type Articolo = CollectionEntry<"articoli">;

function slugify(s: string) {
  return s
    .toLowerCase()
    .trim()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/[^a-z0-9\s-]/g, "")
    .replace(/\s+/g, "-")
    .replace(/-+/g, "-");
}

export async function getStaticPaths() {
  const articoli = await getCollection("articoli");
  const set = new Set<string>();

  for (const a of articoli) {
    for (const s of a.data.sentieri ?? []) set.add(slugify(s));
  }

  return Array.from(set).map((slug) => ({ params: { slug } }));
}

const articoli = await getCollection("articoli");
const { slug } = Astro.params as { slug: string };

// Nome “umano”
let sentieroNome = slug;
for (const a of articoli) {
  const found = (a.data.sentieri ?? []).find((s) => slugify(s) === slug);
  if (found) { sentieroNome = found; break; }
}

const articoliDelSentiero = articoli
  .filter((a) => (a.data.sentieri ?? []).some((s) => slugify(s) === slug))
  .slice()
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (d: Date) =>
  d.toLocaleDateString("it-IT", { year: "numeric", month: "long", day: "2-digit" });
---


<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{sentieroNome} — Sentieri di Lettura</title>

  <style is:global>
    :root{
      --ink:#2c241c;
      --green:#0d8460;

      --paper1:#efe1c5;
      --paper2:#e2caa6;
      --paper3:#d8bc93;
    }

    body{
      margin:0;
      min-height:100vh;
      background: var(--green);
      font-family:
        "Baskerville Old Face","Baskerville","Libre Baskerville",
        Georgia,"Times New Roman",serif;
      color:var(--ink);
    }

    .topnav{
      position: sticky; top:0; z-index:50;
      display:flex; gap:18px; justify-content:center; align-items:center;
      padding:14px 14px;
      background: rgba(26, 20, 16, 0.35);
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
      border-bottom: 1px solid rgba(255,255,255,0.10);
    }
    .topnav a{
      color: rgba(255,245,230,0.92);
      text-decoration:none;
      font-size:16px;
      padding:6px 4px;
      border-bottom:1px solid transparent;
    }
    .topnav a:hover{ border-bottom-color: rgba(255,245,230,0.65); }
    .topnav a[aria-current="page"]{ border-bottom-color: rgba(255,245,230,0.95); }

    main{ display:flex; justify-content:center; padding:32px 14px; }

    .paper{
      max-width:980px; width:100%; padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, var(--paper1), var(--paper2) 55%, var(--paper3));
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{ text-align:center; font-size:40px; font-weight:400; margin:0 0 14px; }
    .sub{ text-align:center; opacity:0.75; margin:0 0 28px; }

    ul{ list-style:none; padding:0; margin:0; }
    li{ padding:12px 0; border-top:1px solid rgba(44,36,28,0.18); }
    li:first-child{ border-top:0; }

    a.article{
      text-decoration:none;
      color:var(--ink);
      border-bottom:1px solid rgba(44,36,28,0.25);
    }
    a.article:hover{ border-bottom-color: rgba(44,36,28,0.6); }

    .meta{ opacity:0.75; font-size:14px; margin-top:6px; }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:34px; }
      .topnav{ gap:12px; flex-wrap:wrap; }
    }
  </style>
</head>

<body>
  <nav class="topnav" aria-label="Menu principale">
    <a href="/inizio-da-qui">Inizia da qui</a>
    <a href="/sentieri" aria-current="page">Sentieri di lettura</a>
    <a href="/articoli">Articoli</a>
    <a href="/intenti">Intenti del log</a>
    <a href="/chi-sono">Chi sono</a>
    <a href="/">Home</a>
  </nav>

  <main>
    <article class="paper">
      <h1>{sentieroNome}</h1>
      <p class="sub">{articoliDelSentiero.length} articoli</p>

      {articoliDelSentiero.length === 0 ? (
        <p style="text-align:center; opacity:0.75;">
          Nessun articolo ancora associato a questo Sentiero.
        </p>
      ) : (
        <ul>
          {articoliDelSentiero.map((a) => (
            <li>
              <a class="article" href={`/articoli/${a.slug}`}>{a.data.title}</a>
              <div class="meta">{formatDate(a.data.date)}</div>
            </li>
          ))}
        </ul>
      )}
    </article>
  </main>
</body>
</html>
