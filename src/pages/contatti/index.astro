---
import BaseLayout from "../../layouts/BaseLayout.astro";
const titoloPagina = "Contatti";

// CONTATTI
const EMAIL = "ilblogdilujanta@gmail.com";
const TELEGRAM_USER = "blogdilujanta";
const TELEGRAM_CHANNEL = "ilblogdilujanta";
const ACADEMIA_URL = "https://independent.academia.edu/AlberoDaniela";
const X_URL = "https://x.com/ilblogdiLujanta";
const FACEBOOK_URL = "https://www.facebook.com/profile.php?id=100064996321616";
---

<BaseLayout title={titoloPagina}>
  <style is:global>
    :root{
      --ink:#2c241c;
      --green:#0d8460;
      --paper1:#efe1c5;
      --paper2:#e2caa6;
      --paper3:#d8bc93;
    }

    body{
      margin:0;
      min-height:100vh;
      background: var(--green);
      font-family:
        "Baskerville Old Face",
        "Baskerville",
        "Libre Baskerville",
        Georgia,
        "Times New Roman",
        serif;
      color:var(--ink);
    }

    main{
      display:flex;
      justify-content:center;
      padding:32px 14px;
    }

    .paper{
      max-width:980px;
      width:100%;
      padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, var(--paper1), var(--paper2) 55%, var(--paper3));
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{
      text-align:center;
      font-size:44px;
      font-weight:400;
      margin:0 0 18px;
    }

    .sub{
      margin: 0 0 34px;
      font-size: 20px;
      line-height: 1.75;
    }

    .cards{
      display:grid;
      grid-template-columns: 1fr;
      gap:18px;
      margin-top: 18px;
    }

    @media (min-width: 820px){
      .cards{ grid-template-columns: 1fr 1fr; }
    }

    /* ===== CARD LINK ===== */
    .card-link{
      display:block;
      text-decoration:none;
      color:inherit;
      border:1px solid rgba(44,36,28,0.22);
      border-radius:8px;
      background: rgba(255,255,255,0.20);
      padding:18px;
      transition: background .2s ease, box-shadow .2s ease;
    }

    .card-link:hover{
      background: rgba(255,255,255,0.35);
      box-shadow:0 10px 28px rgba(0,0,0,0.18);
    }

    .card-title{
      display:flex;
      align-items:center;
      gap:10px;
      margin:0 0 10px;
      font-size:22px;
      font-weight:400;
    }

    .icon{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      width:28px;
      height:28px;
      border-radius:999px;
      border:1px solid rgba(44,36,28,0.22);
      background: rgba(255,255,255,0.18);
    }

    .card p{
      margin:0 0 6px;
      font-size:18px;
      line-height:1.6;
    }

    .contact-link{
      border-bottom:1px solid rgba(44,36,28,0.25);
      display:inline-block;
      padding-bottom:2px;
    }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:38px; }
    }
  </style>

  <main>
    <article class="paper">
      <h1>Contatti</h1>

      <div class="sub">
        <p>
          Credo nello scambio consapevole e rispettoso, anche negli spazi digitali.
          Ho scelto di abitare più luoghi, selezionati per qualità e pertinenza.
        </p>
        <p>
          Qui trovi i miei spazi online.  
          Scegli quello che senti più vicino al tuo modo di leggere e dialogare.
        </p>
      </div>

      <section class="cards" aria-label="Canali di contatto">

        <!-- EMAIL -->
        <a class="card-link" href={`mailto:${EMAIL}`} aria-label="Scrivi una email">
          <h2 class="card-title">
            <span class="icon">✉</span> Email
          </h2>
          <p>Per messaggi più lunghi</p>
          <span class="contact-link">{EMAIL}</span>
        </a>

        <!-- TELEGRAM -->
        <a class="card-link" href={`https://t.me/${TELEGRAM_USER}`} target="_blank" rel="noopener">
          <h2 class="card-title">
            <span class="icon">➤</span> Telegram
          </h2>
          <p>Contatto rapido in privato</p>
          <span class="contact-link">@{TELEGRAM_USER}</span>
        </a>

        <!-- CANALE TELEGRAM -->
        <a class="card-link" href={`https://t.me/${TELEGRAM_CHANNEL}`} target="_blank" rel="noopener">
          <h2 class="card-title">
            <span class="icon">➤</span> Canale Telegram
          </h2>
          <p>Aggiornamenti e comunicazioni</p>
          <span class="contact-link">Vai al canale</span>
        </a>

        <!-- ACADEMIA -->
        <a class="card-link" href={ACADEMIA_URL} target="_blank" rel="noopener">
          <h2 class="card-title">
            <span class="icon">◎</span> Academia.edu
          </h2>
          <p>I miei lavori e le mie ricerche</p>
          <span class="contact-link">Vai al profilo</span>
        </a>

        <!-- X -->
        <a class="card-link" href={X_URL} target="_blank" rel="noopener">
          <h2 class="card-title">
            <span class="icon">✕</span> X
          </h2>
          <p>Condivisioni e aggiornamenti brevi</p>
          <span class="contact-link">Vai alla pagina</span>
        </a>

        <!-- FACEBOOK -->
        <a class="card-link" href={FACEBOOK_URL} target="_blank" rel="noopener">
          <h2 class="card-title">
            <span class="icon">f</span> Facebook
          </h2>
          <p>Pagina e contenuti condivisi</p>
          <span class="contact-link">Vai alla pagina</span>
        </a>

      </section>
    </article>
  </main>
</BaseLayout>
