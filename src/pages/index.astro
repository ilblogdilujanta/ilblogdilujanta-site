---
const siteTitle = "il Blog di Lujanta";
const tagline =
  "TRADIZIONI, FOLKLORE E STREGONERIA\nnelle Culture alpine e nei loro intrecci europei nel tempo";
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteTitle}</title>
    <style>
      :root{
        --ink:#2b2a26;
        --paper: rgba(244,241,234,.78); /* velo “avorio” sopra l’immagine */
        --border: rgba(43,42,38,.35);
      }

      body{ margin:0; font-family: Georgia,"Times New Roman",serif; color:var(--ink); }

      /* HERO full-screen */
      .hero{
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        display: grid;
        place-items: center;
      }

      .hero__bg{
        position:absolute; inset:0;
        background-image: url("/workspaces/ilblogdilujanta-site/src/pages/hero.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        transform: scale(1.02);
      }

      /* leggera patina avorio per far “stare” la grafica */
      .hero__veil{
        position:absolute; inset:0;
        background: var(--paper);
      }

      /* contenuto sopra */
      .hero__content{
        position: relative;
        width: min(980px, 92vw);
        text-align: center;
        padding: 2.5rem 1rem;
      }

      /* barra link in alto */
      .topnav{
        position: fixed;
        top: 1rem;
        left: 50%;
        transform: translateX(-50%);
        width: min(980px, 92vw);
        display: flex;
        justify-content: center;
        gap: 1rem;
        padding: .7rem 1rem;
        border: 1px solid var(--border);
        background: rgba(244,241,234,.75);
        backdrop-filter: blur(4px);
        z-index: 10;
      }
      .topnav a{
        color: inherit;
        text-decoration: none;
        padding: .2rem .4rem;
      }
      .topnav a:hover{ text-decoration: underline; }

      h1{
        font-weight: normal;
        letter-spacing: .02em;
        font-size: clamp(2rem, 4vw, 3rem);
        margin: 0 0 .8rem 0;
      }

      .tagline{
        margin: 0 auto 1.4rem auto;
        max-width: 62ch;
        font-size: clamp(1rem, 1.6vw, 1.15rem);
        line-height: 1.8;
        white-space: pre-line; /* per la riga a capo in tagline */
      }

      .cta{
        display:inline-block;
        padding: .7rem 1.3rem;
        border: 1px solid var(--border);
        background: rgba(244,241,234,.55);
        color: inherit;
        text-decoration: none;
      }
      .cta:hover{ background: rgba(244,241,234,.8); }

      /* mini riga decorativa */
      .rule{
        margin: 1.6rem auto 0 auto;
        width: min(520px, 80vw);
        height: 1px;
        background: var(--border);
      }
    </style>
  </head>

  <body>
    <!-- Link/collegamenti sopra la foto -->
    <nav class="topnav" aria-label="Menu principale">
      <a href="/inizia">Inizia da qui</a>
      <a href="/articoli">Articoli</a>
      <a href="/percorsi">Percorsi</a>
      <a href="/temi">Temi</a>
      <a href="/chi-sono">Chi sono</a>
    </nav>

    <!-- Copertina a schermo intero -->
    <main class="hero">
      <div class="hero__bg" role="img" aria-label="Copertina: paesaggio innevato del lago"></div>
      <div class="hero__veil"></div>

      <div class="hero__content">
        <h1>{siteTitle}</h1>
        <p class="tagline">{tagline}</p>
        <a class="cta" href="/inizia">Inizia da qui</a>
        <div class="rule"></div>
      </div>
    </main>
  </body>
</html>
