---
import { getCollection, type CollectionEntry } from "astro:content";
import { slugify } from "../../lib/slugify";
import BaseLayout from "../../layouts/BaseLayout.astro";

type Articolo = CollectionEntry<"articoli">;

const titoloPagina = "Articoli";

// Prendo tutti gli articoli e category: più recente -> più vecchio
const articoli: Articolo[] = (await getCollection("articoli"))
  .slice()
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

/** ✅ DATA con giorno della settimana (sincronizzata con la pagina articolo) */
const formatDate = (d: Date) => {
  const s = d.toLocaleDateString("it-IT", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  });
  return s.charAt(0).toUpperCase() + s.slice(1);
};

// Raggruppo per anno (mantenendo l’ordine già decrescente)
const byYear = new Map<number, Articolo[]>();
for (const a of articoli) {
  const y = a.data.date.getFullYear();
  if (!byYear.has(y)) byYear.set(y, []);
  byYear.get(y)!.push(a);
}
const anni = Array.from(byYear.keys()).sort((a, b) => b - a);

// (facoltativo) anno preselezionato da querystring ?anno=2016
const selectedYearParam = Astro.url.searchParams.get("anno");
const selectedYear = selectedYearParam ? Number(selectedYearParam) : null;
const anniFiltrati = selectedYear && byYear.has(selectedYear) ? [selectedYear] : anni;
---

<BaseLayout title={titoloPagina}>
  <style is:global>
    :root{
      --ink:#2c241c;
      --bg:#0d8460;
    }

    body{
      margin:0;
      min-height:100vh;
      background:var(--bg);
      font-family:"Baskerville Old Face","Baskerville","Libre Baskerville",Georgia,"Times New Roman",serif;
      color:var(--ink);
    }

    main{ display:flex; justify-content:center; padding:32px 14px; }

    .paper{
      max-width:980px; width:100%; padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, #efe1c5, #e2caa6 55%, #d8bc93);
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{
      text-align:center;
      font-size:44px;
      font-weight:400;
      margin:0 0 12px;
    }

    .sub{
      text-align:center;
      margin:0 0 26px;
      font-size:20px;
      opacity:.85;
    }

    /* ===== filtro anni ===== */
    .filters{
      display:flex;
      justify-content:center;
      gap:10px;
      flex-wrap:wrap;
      margin: 0 0 28px;
    }
    .filter{
      text-decoration:none;
      color:var(--ink);
      border:1px solid rgba(44,36,28,0.22);
      padding:6px 10px;
      border-radius:999px;
      background:rgba(255,255,255,0.18);
      font-size:18px;
    }
    .filter:hover{ background:rgba(255,255,255,0.35); }
    .filter[aria-current="true"]{
      background:rgba(255,255,255,0.45);
    }

    /* ===== Raggruppamento per anni ===== */
    .year{
      margin: 34px 0 10px;
      font-size: 26px;
      font-weight: 400;
      opacity: 0.95;
      border-top: 1px solid rgba(44,36,28,0.18);
      padding-top: 18px;
    }
    .year:first-of-type{
      border-top: none;
      padding-top: 0;
      margin-top: 0;
    }

    .list{ list-style:none; padding:0; margin:0; }

    /* ✅ ogni riga articolo con cover */
    .list li{
      padding:14px 0;
      border-top:1px solid rgba(44,36,28,0.18);

      display:grid;
      grid-template-columns: 150px 1fr;
      gap: 16px;
      align-items: start;
    }
    .list li:first-child{ border-top:none; }

    /* ✅ cover */
    .cover-link{
      display:block;
      text-decoration:none;
    }
    img.cover{
      width:100%;
      height:100px;
      object-fit:cover;
      border-radius:6px;
      box-shadow:0 8px 20px rgba(0,0,0,0.18);
      display:block;
    }

    .intro{
      text-align: left; /* ✅ prima era vuoto e rompeva il CSS */
      font-size: 20px;
      line-height: 1.55;
      margin: 0 0 22px;
      opacity: 0.9;
    }

    /* testo */
    .text-col{ min-width:0; }

    .title{
      text-decoration:none;
      color:var(--ink);
      border-bottom:1px solid rgba(44,36,28,0.25);
      font-size:18px;
      line-height:1.35;
    }
    .title:hover{ border-bottom-color:rgba(44,36,28,0.6); }

    .meta{
      margin-top:6px;
      font-size:14px;
      opacity:0.75;
      display:flex;
      flex-wrap:wrap;
      gap:10px 14px;
      align-items:baseline;
    }

    .chips{ display:flex; flex-wrap:wrap; gap:8px; }

    .chip{
      font-size:13px;
      text-decoration:none;
      color:var(--ink);
      border:1px solid rgba(44,36,28,0.22);
      padding:4px 8px;
      border-radius:999px;
      background:rgba(255,255,255,0.18);
    }
    .chip:hover{ background:rgba(255,255,255,0.35); }

    /* Se non c’è cover: riga a 1 colonna */
    .list li.no-cover{
      grid-template-columns: 1fr;
    }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:38px; }
      .year{ font-size: 24px; }

      .list li{
        grid-template-columns: 1fr;
      }
      img.cover{
        height: 160px;
      }
    }
  </style>

  <main>
    <article class="paper">
      <h1>Articoli</h1>

      <p class="intro">
        Gli articoli realizzati nel corso degli ultimi dieci anni,
        non ancora presenti su questo sito, saranno trasferiti progressivamente,
        per scelta editoriale. Fino al completamento della migrazione, i contenuti
        restano disponibili sul sito precedente:
        <a href="https://ilblogdilujanta.blogspot.com" target="_blank" rel="noopener noreferrer">
          ilblogdilujanta.blogspot.com
        </a>
      </p>

      <br>
      <br>

      <p class="sub">{articoli.length} articoli</p>

      {/* Filtro anni (link) */}
      {anni.length > 0 && (
        <nav class="filters" aria-label="Filtra per anno">
          <a class="filter" href="/articoli" aria-current={selectedYear === null ? "true" : "false"}>
            Tutti
          </a>
          {anni.map((y) => (
            <a
              class="filter"
              href={`/articoli?anno=${y}`}
              aria-current={selectedYear === y ? "true" : "false"}
            >
              {y}
            </a>
          ))}
        </nav>
      )}

      {articoli.length === 0 ? (
        <p style="text-align:center; opacity:0.8;">
          Gli articoli compariranno qui non appena verranno aggiunti.
        </p>
      ) : (
        <>
          {anniFiltrati.map((anno) => (
            <section aria-label={`Articoli ${anno}`}>
              <h2 class="year">{anno}</h2>

              <ul class="list">
                {byYear.get(anno)!.map((a) => (
                  <li class={!a.data.cover ? "no-cover" : undefined}>
                    {a.data.cover && (
                      <a class="cover-link" href={`/articoli/${a.slug}`} aria-label={`Apri: ${a.data.title}`}>
                        <img class="cover" src={a.data.cover} alt={a.data.title} loading="lazy" />
                      </a>
                    )}

                    <div class="text-col">
                      <a class="title" href={`/articoli/${a.slug}`}>{a.data.title}</a>

                      <div class="meta">
                        <span>{formatDate(a.data.date)}</span>

                        {Array.isArray(a.data.sentieri) && a.data.sentieri.length > 0 && (
                          <span class="chips" aria-label="Sentieri">
                            {a.data.sentieri.map((s) => (
                              <a class="chip" href={`/sentieri/${slugify(s)}`}>{s}</a>
                            ))}
                          </span>
                        )}
                      </div>
                    </div>
                  </li>
                ))}
              </ul>
            </section>
          ))}
        </>
      )}
    </article>
  </main>
</BaseLayout>
