---
import { getCollection, type CollectionEntry } from "astro:content";
import { slugify } from "../../lib/slugify";
import BaseLayout from "../../layouts/BaseLayout.astro";

type Articolo = CollectionEntry<"articoli">;

const titoloPagina = "Articoli";

// Tutti gli articoli (più recente -> più vecchio)
const articoli: Articolo[] = (await getCollection("articoli"))
  .slice()
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

/** ✅ Data con giorno della settimana */
const formatDate = (d: Date) => {
  const s = d.toLocaleDateString("it-IT", {
    weekday: "long",
    year: "numeric",
    month: "long",
    day: "numeric",
  });
  return s.charAt(0).toUpperCase() + s.slice(1);
};

// Raggruppo per anno
const byYear = new Map<number, Articolo[]>();
for (const a of articoli) {
  const y = a.data.date.getFullYear();
  if (!byYear.has(y)) byYear.set(y, []);
  byYear.get(y)!.push(a);
}

const anni = Array.from(byYear.keys()).sort((a, b) => b - a);
---

<BaseLayout title={titoloPagina}>
  <style is:global>
    :root{
      --ink:#2c241c;
      --bg:#0d8460;
    }

    body{
      margin:0;
      min-height:100vh;
      background:var(--bg);
      font-family:"Baskerville Old Face","Baskerville","Libre Baskerville",Georgia,"Times New Roman",serif;
      color:var(--ink);
    }

    main{ display:flex; justify-content:center; padding:32px 14px; }

    .paper{
      max-width:980px; width:100%; padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, #efe1c5, #e2caa6 55%, #d8bc93);
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{
      text-align:center;
      font-size:44px;
      font-weight:400;
      margin:0 0 12px;
    }

    .intro{
      text-align:left;
      font-size:20px;
      line-height:1.55;
      margin:0 0 22px;
      opacity:.9;
    }

    .sub{
      text-align:center;
      margin:18px 0 26px;
      font-size:20px;
      opacity:.85;
    }

    /* ===== filtro anni ===== */
    .filters{
      display:flex;
      justify-content:center;
      gap:10px;
      flex-wrap:wrap;
      margin: 0 0 28px;
    }
    .filter{
      text-decoration:none;
      color:var(--ink);
      border:1px solid rgba(44,36,28,0.22);
      padding:6px 10px;
      border-radius:999px;
      background:rgba(255,255,255,0.18);
      font-size:18px;
    }
    .filter:hover{ background:rgba(255,255,255,0.35); }
    .filter[aria-current="true"]{
      background:rgba(255,255,255,0.45);
    }

    /* ===== Raggruppamento per anni ===== */
    .year{
      margin: 34px 0 10px;
      font-size: 26px;
      font-weight: 400;
      opacity: 0.95;
      border-top: 1px solid rgba(44,36,28,0.18);
      padding-top: 18px;
    }
    .year:first-of-type{
      border-top:none;
      padding-top:0;
      margin-top:0;
    }

    .list{ list-style:none; padding:0; margin:0; }

    /* riga articolo con cover */
    .list li{
      padding:14px 0;
      border-top:1px solid rgba(44,36,28,0.18);
      display:grid;
      grid-template-columns: 150px 1fr;
      gap: 16px;
      align-items:start;
    }
    .list li:first-child{ border-top:none; }

    .cover-link{ display:block; text-decoration:none; }
    img.cover{
      width:100%;
      height:100px;
      object-fit:cover;
      border-radius:6px;
      box-shadow:0 8px 20px rgba(0,0,0,0.18);
      display:block;
      background: rgba(255,255,255,0.12);
    }

    .text-col{ min-width:0; }

    .title{
      text-decoration:none;
      color:var(--ink);
      border-bottom:1px solid rgba(44,36,28,0.25);
      font-size:18px;
      line-height:1.35;
    }
    .title:hover{ border-bottom-color:rgba(44,36,28,0.6); }

    /* ✅ meta in colonna: data sopra, sentieri sotto */
    .meta{
      margin-top:6px;
      font-size:14px;
      opacity:.75;
      display:flex;
      flex-direction:column;
      gap:8px;
      align-items:flex-start;
    }

    .chips{ display:flex; flex-wrap:wrap; gap:8px; }

    .chip{
      font-size:13px;
      text-decoration:none;
      color:var(--ink);
      border:1px solid rgba(44,36,28,0.22);
      padding:4px 8px;
      border-radius:999px;
      background:rgba(255,255,255,0.18);
    }
    .chip:hover{ background:rgba(255,255,255,0.35); }

    /* senza cover: 1 colonna */
    .list li.no-cover{
      grid-template-columns: 1fr;
    }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:38px; }
      .year{ font-size:24px; }
      .list li{ grid-template-columns:1fr; }
      img.cover{ height:160px; }
    }
  </style>

  <main>
    <article class="paper">
      <h1>Articoli</h1>

      <p class="intro">
        Gli articoli realizzati nel corso degli ultimi dieci anni,
        non ancora presenti su questo sito, saranno trasferiti progressivamente,
        per scelta editoriale. Fino al completamento della migrazione, i contenuti
        restano disponibili sul sito precedente:
        <a href="https://ilblogdilujanta.blogspot.com" target="_blank" rel="noopener noreferrer">
          ilblogdilujanta.blogspot.com
        </a>
      </p>

      <p class="sub"><span id="articles-count">{articoli.length}</span> articoli</p>

      {/* Filtro anni (link) */}
      {anni.length > 0 && (
        <nav class="filters" id="year-filters" aria-label="Filtra per anno">
          <a class="filter" data-year="all" href="/articoli" aria-current="true">Tutti</a>
          {anni.map((y) => (
            <a class="filter" data-year={String(y)} href={`/articoli?anno=${y}`} aria-current="false">
              {y}
            </a>
          ))}
        </nav>
      )}

      {articoli.length === 0 ? (
        <p style="text-align:center; opacity:0.8;">
          Gli articoli compariranno qui non appena verranno aggiunti.
        </p>
      ) : (
        <>
          {anni.map((anno) => (
            <section data-year={String(anno)} aria-label={`Articoli ${anno}`}>
              <h2 class="year">{anno}</h2>

              <ul class="list">
                {byYear.get(anno)!.map((a) => (
                  <li data-article class={!a.data.cover ? "no-cover" : undefined}>
                    {a.data.cover && (
                      <a class="cover-link" href={`/articoli/${a.slug}`} aria-label={`Apri: ${a.data.title}`}>
                        <img class="cover" src={a.data.cover} alt={a.data.title} loading="lazy" />
                      </a>
                    )}

                    <div class="text-col">
                      <a class="title" href={`/articoli/${a.slug}`}>{a.data.title}</a>

                      <div class="meta">
                        <span>{formatDate(a.data.date)}</span>

                        {Array.isArray(a.data.sentieri) && a.data.sentieri.length > 0 && (
                          <div class="chips" aria-label="Sentieri">
                            {a.data.sentieri.map((s) => (
                              <a class="chip" href={`/sentieri/${slugify(s)}`}>{s}</a>
                            ))}
                          </div>
                        )}
                      </div>
                    </div>
                  </li>
                ))}
              </ul>
            </section>
          ))}
        </>
      )}

      {/* ✅ filtro anno funzionante anche su build statica */}
      <script is:inline>
        (function () {
          const params = new URLSearchParams(window.location.search);
          const year = params.get("anno");
          const yearOk = year && /^\d{4}$/.test(year) ? year : null;

          const sections = Array.from(document.querySelectorAll('section[data-year]'));
          const filters = Array.from(document.querySelectorAll('#year-filters a[data-year]'));
          const countEl = document.getElementById("articles-count");

          function updateCount() {
            if (!countEl) return;
            let count = 0;
            sections.forEach((sec) => {
              if (!sec.hidden) count += sec.querySelectorAll("li[data-article]").length;
            });
            countEl.textContent = String(count);
          }

          function setCurrent(y) {
            sections.forEach((sec) => {
              sec.hidden = !!(y && sec.getAttribute("data-year") !== y);
            });

            filters.forEach((a) => {
              const val = a.getAttribute("data-year");
              const isCurrent = y ? val === y : val === "all";
              a.setAttribute("aria-current", isCurrent ? "true" : "false");
            });

            updateCount();
          }

          setCurrent(yearOk);
        })();
      </script>
    </article>
  </main>
</BaseLayout>
