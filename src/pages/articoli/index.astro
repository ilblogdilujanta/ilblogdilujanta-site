---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import { slugify } from "../../lib/slugify";

type Articolo = CollectionEntry<"articoli">;

// Prendo tutti gli articoli e li ordino: più recente -> più vecchio
const articoli: Articolo[] = (await getCollection("articoli"))
  .slice()
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (d: Date) =>
  d.toLocaleDateString("it-IT", { year: "numeric", month: "long", day: "2-digit" });

// Raggruppo per anno (mantenendo l’ordine già decrescente)
const byYear = new Map<number, Articolo[]>();
for (const a of articoli) {
  const y = a.data.date.getFullYear();
  if (!byYear.has(y)) byYear.set(y, []);
  byYear.get(y)!.push(a);
}

// Lista anni (desc)
const anni = Array.from(byYear.keys()).sort((a, b) => b - a);
---

<BaseLayout title="Articoli">
  <style is:global>
    :root{
      --ink:#2c241c;
      --bg:#0d8460;
    }

    body{
      margin:0; min-height:100vh; background:var(--bg);
      font-family:"Baskerville Old Face","Baskerville","Libre Baskerville",Georgia,"Times New Roman",serif;
      color:var(--ink);
    }

    /* ⚠️ Il menu (.topnav) adesso è nel BaseLayout.
       Qui lasciamo solo gli stili della pagina contenuto. */

    main{ display:flex; justify-content:center; padding:32px 14px; }

    .paper{
      max-width:980px; width:100%; padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, #efe1c5, #e2caa6 55%, #d8bc93);
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{
      text-align:center;
      font-size:44px;
      font-weight:400;
      margin:0 0 12px;
    }

    .sub{
      text-align:center;
      margin:0 0 26px;
      font-size:16px;
      opacity:.85;
    }

    /* ===== Raggruppamento per anni ===== */
    .year{
      margin: 34px 0 10px;
      font-size: 26px;
      font-weight: 400;
      opacity: 0.95;
      border-top: 1px solid rgba(44,36,28,0.18);
      padding-top: 18px;
    }
    .year:first-of-type{
      border-top: none;
      padding-top: 0;
      margin-top: 0;
    }

    .list{ list-style:none; padding:0; margin:0; }
    .list li{ padding:14px 0; border-top:1px solid rgba(44,36,28,0.18); }
    .list li:first-child{ border-top:none; }

    .title{
      text-decoration:none;
      color:var(--ink);
      border-bottom:1px solid rgba(44,36,28,0.25);
      font-size:18px;
      line-height:1.35;
    }
    .title:hover{ border-bottom-color:rgba(44,36,28,0.6); }

    .meta{
      margin-top:6px;
      font-size:14px;
      opacity:0.75;
      display:flex;
      flex-wrap:wrap;
      gap:10px 14px;
      align-items:baseline;
    }

    .chips{ display:flex; flex-wrap:wrap; gap:8px; }

    .chip{
      font-size:13px;
      text-decoration:none;
      color:var(--ink);
      border:1px solid rgba(44,36,28,0.22);
      padding:4px 8px;
      border-radius:999px;
      background:rgba(255,255,255,0.18);
    }
    .chip:hover{ background:rgba(255,255,255,0.35); }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:38px; }
      .year{ font-size: 24px; }
    }
  </style>

  <main>
    <article class="paper">
      <h1>Articoli</h1>
      <p class="sub">{articoli.length} articoli</p>

      {articoli.length === 0 ? (
        <p style="text-align:center; opacity:0.8;">
          Gli articoli compariranno qui non appena verranno aggiunti.
        </p>
      ) : (
        <>
          {anni.map((anno) => (
            <section aria-label={`Articoli ${anno}`}>
              <h2 class="year">{anno}</h2>

              <ul class="list">
                {byYear.get(anno)!.map((a) => (
                  <li>
                    <a class="title" href={`/articoli/${a.slug}`}>{a.data.title}</a>

                    <div class="meta">
                      <span>{formatDate(a.data.date)}</span>

                      {Array.isArray(a.data.sentieri) && a.data.sentieri.length > 0 && (
                        <span class="chips" aria-label="Sentieri">
                          {a.data.sentieri.map((s) => (
                            <a class="chip" href={`/sentieri/${slugify(s)}`}>{s}</a>
                          ))}
                        </span>
                      )}
                    </div>
                  </li>
                ))}
              </ul>
            </section>
          ))}
        </>
      )}
    </article>
  </main>
</BaseLayout>
