---
import { getCollection } from "astro:content";

type Articolo = {
  slug: string;
  data: { title: string; date: Date; sentieri?: string[] };
  body: string;
  render: () => Promise<{ Content: any }>;
};

export async function getStaticPaths() {
  const articoli = await getCollection("articoli");
  return articoli.map((a) => ({ params: { slug: a.slug } }));
}

const articoli = await getCollection("articoli");
const { slug } = Astro.params as { slug: string };
const articolo = articoli.find((a) => a.slug === slug) as Articolo;

if (!articolo) throw new Error("Articolo non trovato");

const { Content } = await articolo.render();

const formatDate = (d: Date) =>
  d.toLocaleDateString("it-IT", { year: "numeric", month: "long", day: "2-digit" });
---

<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{articolo.data.title}</title>

  <style is:global>
    body{
      margin:0;
      min-height:100vh;
      background:#0d8460;
      font-family:
        "Baskerville Old Face","Baskerville","Libre Baskerville",
        Georgia,"Times New Roman",serif;
      color:#2c241c;
    }

    main{ display:flex; justify-content:center; padding:32px 14px; }

    .paper{
      max-width:980px; width:100%; padding:60px;
      background:
        radial-gradient(120% 90% at 50% 20%, rgba(255,255,255,0.35), rgba(255,255,255,0) 55%),
        linear-gradient(180deg, #efe1c5, #e2caa6 55%, #d8bc93);
      border-radius:6px;
      box-shadow:0 18px 60px rgba(0,0,0,0.55);
    }

    h1{ text-align:center; font-size:44px; font-weight:400; margin:0 0 10px; }
    .meta{ text-align:center; opacity:0.75; margin:0 0 28px; }

    .prose{ font-size:16px; line-height:1.7; }
    .prose p{ margin:0 0 14px; }

    @media (max-width:720px){
      .paper{ padding:42px 26px; }
      h1{ font-size:38px; }
    }
  </style>
</head>

<body>
  <main>
    <article class="paper">
      <h1>{articolo.data.title}</h1>
      <p class="meta">{formatDate(articolo.data.date)}</p>

      <div class="prose">
        <Content />
      </div>
    </article>
  </main>
</body>
</html>
